<button type="button" id="existingusers" class="btn btn-outline-secondary"><h2>User Details</h2></button><p></p>
<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for SBU ID..">
        <table id="allusertable" class="table table-bordered table-hover" >
          <thead class="thead-dark" ><tr> <th>S/N</th> <th>First Name</th><th>Last Name</th> <th>User Category</th> <th>Email Id</th><th>SBU Id</th></tr></thead>
          <tbody></tbody>
        </table>
