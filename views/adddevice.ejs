  <body style="background-image: url(public/images/image1.png) ;">

    <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
      <div class="navbar-header">

      <a class="navbar-brand" href="" id="stonybrook1"><h3>StonyBrook IOT</h3></a>
      </div>

     <!-- navbar-collapse -->
      </div><!-- container-fluid -->
    </nav>

<form class="blue" id="form_adddevice"action="" method="post">

    <div class="container">
    <div class="jumbotron">
    <h2><em>Please Enter Device Details</em></h2>
    <p></p><p></p><br>
    <div class="blue" id="devicecategory">
          <label for="userem">Building Name:</label>
          <select id="ddl" onchange="configureDropDownLists(this,document.getElementById('ddl2'))" class="form-control" name="buildingname" >
              <option value=""></option>
              <option value="Frey Hall">Frey Hall</option>
              <option value="Student Activity Center">Student Activity Center</option>
              <option value="Light Engineering">Light Engineering</option>
         </select>
   </div>


<div class="" id="roomno">
        <label for="userem">Room No:</label>
        <select id="ddl2" class="form-control" name="room">
        </select>
</div>

<!-- this gets updated based on "Building Name" -->


  <label for="userem">Device Id:</label>
  <input type="text" class="form-control" name="deviceid" placeholder="E.g. imac134583" required>


  <label for="userem">Device Category:</label>
      <select name="devicecategory" class="form-control" required>
          <option value=""></option>
          <option value="Light">Light</option>
          <option value="Fan">Fan</option>
          <option value="Printer">Printer</option>
          <option value="Air Conditioning">Air Conditioning</option>
          <option value="Heater">Heater</option>
          <option value="Projector">Projector</option>
          <option value="Lab Door">Lab Door</option>
      </select>
<p></p>
<input type="text" name="status" value="off" hidden="">
<label for="useraccess">Give Access Right to :</label><br>
      <input type="checkbox" class="useraccess" name="accessright" value="Faculty"> <em>Faculty</em> <br>
      <input type="checkbox"   class="useraccess" name="accessright" value="Staff"> <em>Staff</em> <br>
        <input type="checkbox"   class="useraccess" name="accessright" value="Student"> <em>Student</em> <br>
      <!-- <input type="checkbox"  class="useraccess" name="accessright" value="Undergraduate Student"> <em>Undergraduate Student</em><br><br> -->
      <br>
        <input type="submit" class="btn btn-outline-success" name="deviceAdd" value="Add">
      </div>
    </div>

</form>

  <script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous">
  </script>
