<button type="button" id="existingdevices" class="btn btn-outline-secondary"><h2>Device Details</h2></button><p></p>
<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for Device ID.."> <table id="alldevicetable" class="table table-bordered table-hover" >
        <thead class="thead-dark" ><tr class="stonybrook" id="stonybrook"> <th>S/N</th> <th>Building</th> <th>Room</th> <th>Device Id</th> <th>Device Type</th><th>User Category with Access Control</th></tr></thead>
        <tbody ></tbody>
        </table>
